{
  "manifest_version": 3,
  "name": "Enterprise Device ID Tool",
  "version": "1.0",
  "description": "Displays the ChromeOS Directory Device ID.",
  "permissions": [
    "enterprise.deviceAttributes"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "View Device ID",
    "default_icon": {
      "16": "assets/check.png",
      "48": "assets/check.png",
      "128": "assets/check.png"
    }
  },
  "icons": {
    "16": "assets/check.png",
    "48": "assets/check.png",
    "128": "assets/check.png"
  }
}